
@{
    ViewBag.Title = "End";
    Layout = null ;
}


<form class="layui-form" action="" lay-filter="RegisterUserForm" id="RegisterUserForm">
    <div class="layui-form-item">
        <div class="layui-inline">
           

            <input type="hidden" name="UniqueId" id="UniqueId" />
            <input type="hidden" name="ResisterUserType" value="FinalAudit" />

        </div>
    </div>

    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">客户编号:</label>
            <div class="layui-input-inline">
                <input name="Id" id="Id" class="layui-input" placeholder="请输入客户编号" autocomplete="off" lay-verify="required" readonly>
            </div>
        </div>

        <div class="layui-inline">
            <label class="layui-form-label">客户名称:</label>
            <div class="layui-input-inline">
                <input name="Name" id="Name" class="layui-input" placeholder="请输入客户名称" autocomplete="off" lay-verify="required" readonly>
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">生日:</label>
            <div class="layui-input-inline">

                <input name="BirthDay" id="BirthDay" class="layui-input" placeholder="请输入生日" autocomplete="off" lay-verify="required" readonly>

            </div>
        </div>

        <div class="layui-inline">
            <label class="layui-form-label">备注:</label>
            <div class="layui-input-inline">

                <input name="Remark" id="Remark" class="layui-input" placeholder="请输入备注" autocomplete="off" lay-verify="required" readonly>

            </div>
        </div>
    </div>




</form>

